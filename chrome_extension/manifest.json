{
    "name": "Unsquigglify",
    "version": "1.1",
    "description": "Transliterates Devanagari script into Latin script.",
    "manifest_version": 2,
    "options_page": "options.html",
    "permissions": ["storage"],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "chrome_extension.js"
            ],
            "run_at": "document_end"
        }
    ]
}